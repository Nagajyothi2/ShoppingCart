@model Category

<div class="card shadow border-0 mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="CategoryId" hidden>
            <div class="border p-3">
                <input asp-for="Name" class="form-control border-0 shadow" />
                <lable asp-for="Name" class="control-label ms-2">Category Name</lable>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="Submit" class="btn btn-primary form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
